<h2>商品一覧(全x件)</h2>
<table class="table">
  <% @items.each do |item| %>
    <tr>
      <td><%= attachment_image_tag item, :image, size: '30x30', fallback: 'no_image.jpg' %></td>
      <td><%= item.item_name %></td>
      <td><%= item.description %></td>
      <td><%= item.non_taxed_price %>円(税抜き)</td>
      <td>
        <% if item.sale_status == true %>
          販売中
        <% else %>
          売り切れ
        <% end %>
      </td>
      <td>
        <%= link_to "詳細へ", item_path(item.id) %>
      </td>
    </tr>
  <% end %>
</table>