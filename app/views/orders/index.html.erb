<div class="container">
  <div class="row">
    <div class="col-10">
      <h2>注文履歴一覧</h2>

      <table class="table table-hover">
        <thead>
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td>
                <%= order.created_at.strftime('%Y/%m/%d') %>
              </td>
              <td>
                〒<%= order.postal_code %>
                <br>
                <%= order.address %>
                <br>
                <%= order.name %>
              </td>
              <td>
                <% order.order_details.each do |order_detail| %>
                  <%= order_detail.item.item_name %>
                <% end %>
              </td>
              <td>
                <%= order.billing_amount %>円
              </td>
              <td>
                <%= order.order_status_i18n %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>