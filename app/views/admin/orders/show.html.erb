<div class="container">
  <h2>注文履歴詳細</h2>

  <div class="row">

    <div class="col-4">

      <div class="user-name">
        <label>購入者</label>
        <%= @order.end_user.last_name %>  <%= @order.end_user.first_name %>
      </div>

      <div class="shipping">
        <label>配送先</label>
        <%= @order.postal_code %>
        <%= @order.address %>
        <br>
        <%= @order.name %>
      </div>

      <div class="payment">
        <label>お支払い方法</label>
        <%= @order.payment_method_i18n %>
      </div>

      <div class="order-status">
        <label>注文ステータス</label>
        <!--オーダーステータス-->
      </div>

    </div>

    <div class="col-7 offset-1">

      <table class="table mb-5">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th>製作ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @sum = 0 %>
          <% @order_details.each do |order_detail| %>
            <tr>
              <td>
                <%= order_detail.item.item_name %>
              </td>
              <td>
                <%= (order_detail.item.non_taxed_price * 1.1).round %>
              </td>
              <td>
                <%= order_detail.amount %>
              </td>
              <td><%= (order_detail.item.non_taxed_price * 1.1).round * order_detail.amount %></td>
              <td>
                <!--製作ステータス-->
              </td>
              <% @sum += (order_detail.item.non_taxed_price * 1.1).round * order_detail.amount %>
            </tr>
          <% end %>
        </tbody>
      </table>

      <table class="table">
        <tr>
          <td>商品合計</td>
          <td><%= @sum %>円</td>
        </tr>
        <tr>
          <td>送料</td>
          <td>800円</td>
        </tr>
        <tr>
          <td>請求金額合計</td>
          <td><%= @sum + 800.to_i %></td>
        </tr>
      </table>

    </div>

  </div>
</div>