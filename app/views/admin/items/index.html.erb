<h2>商品一覧</h2>
<%= link_to "商品新規登録", new_admin_item_path %>

<table>
  <thead>
    <tr>
      <td>商品ID</td>
      <td>商品名</td>
      <td>商品説明</td>
      <td>商品画像</td>
      <td>税抜き価格</td>
      <td>ジャンル</td>
      <td>ステータス</td>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= item.item_name %></td>
        <td><%= item.description %></td>
        <td><%= attachment_image_tag item, :image, size: '30x30', fallback: 'no_image.jpg' %></td>
        <td><%= item.non_taxed_price %>円(税抜き)</td>
        <td><%= item.genre_id %></td>
        <% if item.sale_status == true %>
          <td class="text-success">販売中</td>
        <% else %>
          <td class="text-danger">売り切れ</td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>