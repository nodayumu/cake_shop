<div class="container">
  <div class="row">
    <div class="col-9">

      <h2>ショッピングカート</h2>
      <%= link_to "カートを空にする", destroy_all_cart_items_path, method: :delete, 'data-confirm' => '空にしますか？' %>
      
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
            <tr>
              <td>
                <%= attachment_image_tag cart_item.item, :image, size: '80x60', fallback: 'no_image.jpg' %>
              </td>
              <td>
                <%= cart_item.item.item_name %>
              </td>
              <td>
                <%= (cart_item.item.non_taxed_price*1.1).round %>
              </td>
              <td>
                <%= form_with model: cart_item, local: true do |f| %>
                  <%= f.number_field :amount, min: 1 %>
                  <%= f.submit "編集" %>
                <% end %>
              </td>
              <td>
                <%= ((cart_item.item.non_taxed_price*1.1).round * cart_item.amount) %>
              </td>
              <td>
                <%= link_to "削除", cart_item_path(cart_item.id), method: :delete %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      
      <%= link_to "買い物を続ける", root_path %>
      
    </div>
  </div>
</div>